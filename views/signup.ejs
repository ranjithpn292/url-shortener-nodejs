<body>
    <h1>Sign Up Form</h1>
    <form method="POST" action="/user">
        <h3>Enter name</h3>
        <input type="text" name="name" required/>
        <h3>Enter email</h3>
        <input type="text" name="email" required/>
        <h3>Enter password</h3>
        <input type="password" name="password" required/>
        <button type="submit">Sign up</button>
    </form>
</body>
